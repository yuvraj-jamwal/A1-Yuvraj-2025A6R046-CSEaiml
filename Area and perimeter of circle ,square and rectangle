#include<stdio.h>
int main(){
float x,y,r;
printf("enter radius of circle:");
scanf("%f",&r);
printf("perimeter of circle is:%f\n",2*3.14*r);
printf("area of circle is:%f\n",3.14*r*r);
printf("enter side of square:");
scanf("%f",&x);
printf("perimeter of square:%f\n",4*x);
printf("area of square:%f\n",x*x);
printf("enter length and width of rectangle:");
scanf("%f%f",&x,&y);
printf("perimeter of rectangle:%f\n",2*(x+y));
printf("area of rectangle:%f\n",x*y);
return 0;
}
